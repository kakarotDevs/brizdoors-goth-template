package partials

templ AuthMenu(name string, picture string, email string) {
	<div class="relative inline-block align-top w-48" id="auth-menu-container">
		<!-- Glass Lens Button -->
		<div class="relative w-full">
			<!-- Layer 1: Glass Base -->
			<div
				class="absolute inset-0 rounded-full z-0 pointer-events-none
					bg-gradient-radial from-white/10 via-white/5 to-white/10
					shadow-[inset_0_1px_2px_rgba(255,255,255,0.12),0_4px_8px_rgba(0,0,0,0.3)]"
			></div>

			<!-- Layer 2: Subtle Light Tint -->
			<div
				class="absolute inset-0 rounded-full z-10 pointer-events-none
					bg-gradient-to-br from-white/15 via-gray-100/10 to-white/20
					backdrop-blur-xl transition-colors duration-300"
			></div>

			<!-- Layer 3: Glass Edge Highlight -->
			<div
				class="absolute inset-0 rounded-full z-20 pointer-events-none
					ring-1 ring-white/10
					shadow-[inset_0_2px_6px_rgba(255,255,255,0.1),inset_0_-1px_2px_rgba(0,0,0,0.3),0_0_0_1px_rgba(255,255,255,0.05)]"
			></div>

			<!-- Top Glossy Reflection -->
			<div
				class="absolute inset-x-0 top-0 h-1/2 rounded-t-full z-30 pointer-events-none
					bg-gradient-to-b from-white/20 via-white/10 to-transparent opacity-40 transition-opacity duration-300"
			></div>

			<!-- Button Layer -->
			<button
				type="button"
				class="relative z-40 flex items-center px-4 py-2.5 rounded-full text-text font-medium w-full justify-between
					bg-white/5 backdrop-blur-lg
					transition-all duration-300
					hover:bg-white/8
					hover:shadow-[0_0_15px_rgba(255,255,255,0.2)]
					hover:brightness-110
					active:scale-[0.97]
					focus:outline-none"
				id="auth-menu-button"
				aria-haspopup="true"
				hx-get="/auth/menu/toggle"
				hx-target="#auth-menu-container"
				hx-swap="outerHTML"
				hx-trigger="click"
			>
				<!-- User Avatar Circle with Initial -->
				<div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-xs font-semibold mr-3 shadow-lg">
					if len(picture) > 0 {
						<img src={picture} alt="avatar" class="w-full h-full rounded-full object-cover" />
					} else if len(name) > 0 {
						{ string([]rune(name)[0]) }
					} else {
						U
					}
				</div>

				<!-- User Name -->
				<span class="hidden sm:block text-text truncate max-w-24 font-semibold tracking-apple">
					if len(name) > 0 {
						{name}
					} else {
						User
					}
				</span>

				<!-- Chevron Icon -->
				<svg class="w-4 h-4 ml-2 text-text-muted group-hover:text-text transition-all duration-200 transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
				</svg>
			</button>
		</div>
	</div>
}

