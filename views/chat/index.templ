package chat

import "github.com/kakarotDevs/brizdoors-goth-template/layouts"

templ Index() {
	@layouts.Base("AI Chat") {
		<div class="w-full h-[calc(100vh-200px)] flex flex-col bg-bg">
			<!-- Chat Messages Area - No scrollbar visible -->
			<div class="flex-1 overflow-y-auto scrollbar-hide" id="chat-scroll-container" style="scrollbar-width: none; -ms-overflow-style: none;">
				<div id="chat-messages" class="max-w-4xl mx-auto px-4">
					<!-- Messages will appear here as user chats -->
				</div>
			</div>

			<!-- Chat Input Area - ChatGPT Style -->
			<div class="flex items-center justify-center min-h-[40vh] px-4" id="input-container">
				<div class="w-full max-w-4xl">
					<!-- ChatGPT-style Input Container -->
					<div class="bg-bg-light rounded-3xl border border-bg-light/50 focus-within:border-blue-500 transition-all duration-200 shadow-sm">
						<form
							id="chat-form"
							hx-post="/chat/message"
							hx-target="#chat-messages"
							hx-swap="beforeend"
							hx-on::after-request="this.reset(); document.getElementById('chat-scroll-container').scrollTop = document.getElementById('chat-scroll-container').scrollHeight; document.getElementById('input-container').classList.remove('min-h-[60vh]', 'items-center', 'justify-center'); document.getElementById('input-container').classList.add('pb-6'); document.getElementById('chat-input').style.height = 'auto';"
							class="flex flex-col"
						>
							<!-- Text Input Area -->
							<div class="flex-1 p-4">
								<textarea
									id="chat-input"
									name="message"
									rows="1"
									placeholder="Message..."
									class="w-full resize-none bg-transparent text-text placeholder-text-muted focus:outline-none overflow-hidden caret-blue-500"
									required
									onkeydown="if(event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); document.getElementById('chat-form').dispatchEvent(new Event('submit', {cancelable: true, bubbles: true})); }"
									oninput="this.style.height = 'auto'; this.style.height = this.scrollHeight + 'px';"
									style="max-height: 200px; min-height: 24px;"
								></textarea>
							</div>

							<!-- Tools and Submit Area -->
							<div class="flex items-center justify-between px-4 pb-4">
								<!-- Left side tools -->
								<div class="flex items-center gap-2">
									<!-- Plus/Attach button -->
									<button
										type="button"
										class="w-8 h-8 text-text-muted hover:text-text hover:bg-bg-dark rounded-lg transition-all duration-200 flex items-center justify-center"
										title="Attach files"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
										</svg>
									</button>

									<!-- Tools button -->
									<button
										type="button"
										class="w-8 h-8 text-text-muted hover:text-text hover:bg-bg-dark rounded-lg transition-all duration-200 flex items-center justify-center"
										title="Tools"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
										</svg>
									</button>
								</div>

								<!-- Right side submit -->
								<button
									type="submit"
									class="w-8 h-8 bg-blue-600 hover:bg-blue-700 text-white disabled:bg-gray-400 disabled:text-gray-200 rounded-full transition-all duration-200 flex items-center justify-center"
									title="Send message"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
									</svg>
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	}
}
