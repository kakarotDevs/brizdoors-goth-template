package profile

import "github.com/kakarotDevs/brizdoors-goth-template/layouts"
import "github.com/kakarotDevs/brizdoors-goth-template/models"

templ Index(user models.User) {
	@layouts.AuthBase("Profile") {
		<div class="w-full max-w-6xl mx-auto px-4 sm:px-6 py-6 sm:py-8 overflow-hidden">
			<!-- Page Header -->
			<div class="mb-6 sm:mb-8">
				<h1 class="text-3xl sm:text-4xl font-bold text-text mb-2">Profile</h1>
				<p class="text-text-muted text-base sm:text-lg">Manage your account settings and preferences</p>
			</div>

			<!-- Liquid Glass Navigation Tabs -->
			<div class="mb-6 sm:mb-8 overflow-x-auto scrollbar-hide">
				<div class="flex space-x-2 p-1 bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-lg min-w-max">
					<button
						class="profile-tab active px-4 sm:px-6 py-2 sm:py-3 rounded-xl text-sm font-medium transition-all duration-300 whitespace-nowrap"
						hx-get="/profile/overview"
						hx-target="#tab-content"
						hx-swap="innerHTML"
						hx-push-url="false"
					>
						Overview
					</button>
					<button
						class="profile-tab px-4 sm:px-6 py-2 sm:py-3 rounded-xl text-sm font-medium transition-all duration-300 whitespace-nowrap"
						hx-get="/profile/account"
						hx-target="#tab-content"
						hx-swap="innerHTML"
						hx-push-url="false"
					>
						Account
					</button>
					<button
						class="profile-tab px-4 sm:px-6 py-2 sm:py-3 rounded-xl text-sm font-medium transition-all duration-300 whitespace-nowrap"
						hx-get="/profile/security"
						hx-target="#tab-content"
						hx-swap="innerHTML"
						hx-push-url="false"
					>
						Security
					</button>
					<button
						class="profile-tab px-4 sm:px-6 py-2 sm:py-3 rounded-xl text-sm font-medium transition-all duration-300 whitespace-nowrap"
						hx-get="/profile/preferences"
						hx-target="#tab-content"
						hx-swap="innerHTML"
						hx-push-url="false"
					>
						Preferences
					</button>
				</div>
			</div>

			<!-- Tab Content -->
			<div id="tab-content" class="overflow-hidden">
				@OverviewContent(user)
			</div>
		</div>
	}
}

